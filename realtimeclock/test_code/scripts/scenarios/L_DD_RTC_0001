# Begin L_DD_RTC_0001

0001		set -x; echo -e "$APP_VAL_INPUT_USER\n $APP_VALID_DATE\n $APP_VALID_TIME\n" | $APP_TIME_SET $DEVFS_RTC | grep "$MSG_DATE_TIME_SET_NEW ${RTC_VALID_DATE} ${RTC_VALID_TIME}" && exit 0 || exit 1
0002		set -x; echo -e "$APP_VAL_INPUT_DEFAULT\n" | $APP_TIME_SET $DEVFS_RTC | grep "${MSG_DATE_TIME_SET_NEW} ${DEF_RTC_VALID_DATE} ${DEF_RTC_VALID_TIME}" && cat $PROCFS_RTC | grep "rtc_time" | grep "${DEF_PROC_VALID_TIME}" && cat $PROCFS_RTC | grep "rtc_date" | grep "${DEF_PROC_VALID_DATE}" && exit 0 || exit 1
0003_01	set -x; echo -e "$APP_VAL_INPUT_USER\n $APP_INVALID_DATE1\n $VALID_TIME\n" | $APP_TIME_SET $DEVFS_RTC && exit 1 || exit 0
0003_02	set -x; echo -e "$APP_VAL_INPUT_USER\n $APP_VALID_DATE\n $APP_INVALID_TIME1\n" | $APP_TIME_SET $DEVFS_RTC && exit 1 || exit 0
0004		set -x; echo -e "$APP_VAL_INPUT_USER\n $APP_INVALID_DATE2\n $VALID_TIME\n" | $APP_TIME_SET $DEVFS_RTC && exit 1 || exit 0

# End L_DD_RTC_0001

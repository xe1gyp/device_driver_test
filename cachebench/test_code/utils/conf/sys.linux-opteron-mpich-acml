BB_LIBS		= -lacml -lrt

# Cachebench values

CB_CC		= $(BB_CC)
CB_CFLAGS	= $(BB_CFLAGS)
CB_LDFLAGS	= $(BB_LDFLAGS)
CB_LIBS		= -lrt

# MPbench values

MP_MPI_CC	= mpicc
